<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey_1"
    tools:context=".ui.inspiration.InspirationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:bottomLeftRadius="200000sp"
        android:bottomRightRadius="200000dp"
        android:foreground="@drawable/title_page">


    </RelativeLayout>

    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:text="Вдохновение"
        android:textColor="#FFFFFF"
        android:textSize="25dp">

    </TextView>


    <TextView
        android:id="@+id/textView3"

        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="69dp"
        android:text="Самые популярные"
        android:textColor="@color/orange_2"
        android:textSize="18dp" />

    <Button
        android:id="@+id/button14"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginStart="240dp"
        android:backgroundTint="@color/light_grey_1"
        android:text="Посмотреть все"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/orange_2" />

    <TextView
        android:id="@+id/textView4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
