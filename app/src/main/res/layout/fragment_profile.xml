<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey_1"
    tools:context=".ui.profile.ProfileFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="320dp"
        android:text="О нас"
        android:textColor="@color/orange_3"
        android:textSize="26sp"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_weight="1"
        android:background="@color/light_grey_1"
        android:backgroundTint="@color/light_grey_1"
        android:src="@drawable/person" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/orange_2"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/orange_3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_save"
            android:hint="Имя"
            android:paddingStart="16dp"
            android:paddingBottom="0dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/orange_2"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_save"
            android:hint="Дата рождения"
            android:paddingStart="16dp"
            android:paddingBottom="0dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/orange_2"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_save"
            android:hint="Описание"
            android:paddingStart="16dp"
            android:paddingBottom="0dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />


    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:bottomLeftRadius="200000sp"
        android:bottomRightRadius="200000dp"
        android:foreground="@drawable/title_page">


    </RelativeLayout>

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="9dp"
        android:text="Настройки"
        android:textColor="#FFFFFF"
        android:textSize="25dp">

    </TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="79dp"
        android:text="Гость"
        android:textColor="@color/orange_3"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="365dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="220dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="Обратная связь"
                android:textColor="@color/orange_3"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:background="@drawable/line"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="170dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:paddingEnd="0dp"
                android:text="Сообщить о проблеме"
                android:textColor="@color/orange_3"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:background="@drawable/line"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="245dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="Оцените нас"
                android:textColor="@color/orange_3"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:background="@drawable/line"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <Button
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="180dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="Версия приложения"
                android:textColor="@color/orange_3"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:background="@drawable/line"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="150dp"

                android:layout_weight="1"
                android:text="Язык"
                android:textColor="@color/orange_3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="Русский"
                android:textColor="@color/orange_3"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/line"
            android:orientation="horizontal" />


    </LinearLayout>


</RelativeLayout>